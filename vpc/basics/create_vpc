#!/usr/bin/env bash


# create a vpc


aws ec2 create-vpc --cidr-block "10.0.0.0/16" --region us-east-2
aws ec2 create-vpc \
  --cidr-block "10.2.0.0/16" \
  --region us-east-1 \
  --tag-specifications 'ResourceType=vpc,Tags=[{Key=Name,Value=VPC}]' \
  --output json > vpc_output.json

# Extract the VPC ID using jq and save to file
cat vpc_output.json | jq -r '.Vpc.VpcId' > vpc_id.txt


# Store the VPC ID in a variable
VPC_ID=$(cat vpc_id.txt)


# Optional: display the VPC ID
echo "âœ… Created VPC with ID: $VPC_ID"





